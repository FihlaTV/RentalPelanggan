<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengajuan Pembatalan"
                android:textSize="17dp"
                android:textColor="@color/hitam"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_border">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/orange">
                <TextView
                    android:id="@+id/textViewTglSewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Sewa"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  -  "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/textViewTglKembali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Sewa"
                    android:textSize="15dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textViewTipeKendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipe Kendaraan"
                android:textSize="13dp"
                android:textColor="@color/orange"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"></TextView>
            <TextView
                android:id="@+id/textViewNamaRentalKendaraan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rental Kendaraan"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icCheckListDenganSupir"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_checklist"/>
                <TextView
                    android:text="Dengan Supir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/abu_tua"
                    android:id="@+id/textViewDenganSupir"/>
                <ImageView
                    android:id="@+id/icCheckListTanpaSupir"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_checklist_false"/>
                <TextView
                    android:text="Tanpa Supir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/abu_tua"
                    android:id="@+id/textViewTanpaSupir"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icCheckListDenganBBM"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_checklist"/>
                <TextView
                    android:text="Dengan Bahan Bakar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/abu_tua"
                    android:id="@+id/textViewDenganBBM"/>
                <ImageView
                    android:id="@+id/icCheckListTanpaBBM"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_checklist_false"/>
                <TextView
                    android:text="Tanpa Bahan Bakar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/abu_tua"
                    android:id="@+id/textViewTanpaBBM"/>
            </LinearLayout>
            <View
                android:id="@+id/pembatas1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/orange" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biodata Pemesan"
                    android:textSize="15dp"
                    android:textStyle=""
                    android:textColor="@color/orange"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:id="@+id/textViewNamaPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pemesan"
                    android:textSize="13dp"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:id="@+id/textViewAlamatPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pemesan"
                    android:textSize="13dp"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:id="@+id/textViewTelponPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telepon Pemesan"
                    android:textSize="13dp"
                    android:layout_marginLeft="15dp"></TextView>
                <TextView
                    android:id="@+id/textViewEmailPemesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Pemesan"
                    android:textSize="13dp"
                    android:layout_marginLeft="15dp"></TextView>
            </LinearLayout>
            <View
                android:id="@+id/pembatas1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/orange" />
            <TextView
                android:text="LUNAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/hijau_tua"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:gravity="right"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">
                <TextView
                    android:text="Total Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/hitam"/>
                <TextView
                    android:text="total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="90dp"
                    android:textColor="@color/hitam"
                    android:id="@+id/textViewTotalPembayaran"/>
            </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alasan Melakukan Pembatalan"
                android:textSize="17dp"
                android:textColor="@color/hitam"
                android:gravity="center"/>
            <EditText
                android:id="@+id/editTextAlasanPembatalan"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:hint="Alasan pengajuan pembatalan atas pemesanan anda... *wajib diisi"
                android:textSize="13dp"
                android:gravity="top"
                android:layout_height="100dp"
                android:background="@drawable/rectangle_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.5">
            <Button
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Ajukan Pembatalan"
                android:id="@+id/buttonAjukanPembatalan"
                android:background="@drawable/round_button"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

